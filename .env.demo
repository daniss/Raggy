# Raggy Demo Configuration
# Configuration for demo/sandbox mode

# ==== DEMO INFORMATION ====
CLIENT_NAME="Raggy Demo"
CLIENT_SLUG="raggy-demo"
DEPLOYMENT_TYPE="demo"

# ==== API CONFIGURATION ====
API_TITLE="Raggy - Démo Interactive"
API_DESCRIPTION="Testez Raggy avec vos documents"
API_VERSION="1.0.0-demo"
ENVIRONMENT="demo"
DEBUG=true

# ==== LLM CONFIGURATION ====
# Demo uses a shared API key with rate limiting
GROQ_API_KEY="demo_key_placeholder"
GROQ_MODEL="deepseek-r1-distill-llama-70b"
GROQ_TEMPERATURE=0.5
GROQ_MAX_TOKENS=1500

# ==== DATABASE CONFIGURATION ====
# Demo uses local PostgreSQL
DATABASE_URL="postgresql://postgres:changeme@postgres:5432/raggy_demo"
SUPABASE_URL="http://localhost:54321"
SUPABASE_SERVICE_KEY="demo_service_key"
SUPABASE_ANON_KEY="demo_anon_key"

# ==== EMBEDDING CONFIGURATION ====
EMBEDDING_MODEL="dangvantuan/sentence-camembert-base"
EMBEDDING_DIMENSION=384
USE_HYBRID_SEARCH=true
USE_RERANKING=false  # Disabled for demo performance
USE_QUERY_ENHANCEMENT=true

# ==== REDIS CONFIGURATION ====
REDIS_URL="redis://redis:6379"
REDIS_TTL=1800  # 30 minutes
REDIS_MAX_MEMORY="256mb"

# ==== DEMO LIMITS ====
MAX_DOCUMENTS=10
MAX_UPLOAD_SIZE_MB=10
MAX_QUERIES_PER_DAY=50
RATE_LIMIT_PER_MINUTE=10
DEMO_SESSION_DURATION_HOURS=24
DEMO_MAX_ACTIVE_SESSIONS=100

# ==== FEATURES ====
ENABLE_UPLOAD=true
ENABLE_EXPORT=true
ENABLE_ANALYTICS=false
ENABLE_DEMO_MODE=true
ENABLE_SESSION_CLEANUP=true

# ==== BRANDING ====
PRIMARY_COLOR="#2563eb"
SECONDARY_COLOR="#3b82f6"
LOGO_URL="/logo-demo.png"
COMPANY_NAME="Demo Company"

# ==== FRONTEND CONFIGURATION ====
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_SUPABASE_URL="http://localhost:54321"
NEXT_PUBLIC_SUPABASE_ANON_KEY="demo_anon_key"
NEXT_PUBLIC_APP_NAME="Raggy - Démo Interactive"
NEXT_PUBLIC_CLIENT_NAME="Demo"
NEXT_PUBLIC_DEMO_MODE=true

# ==== SECURITY (Relaxed for demo) ====
JWT_SECRET="demo_jwt_secret_not_for_production"
CORS_ORIGINS=["*"]  # Allow all origins for demo

# ==== CLEANUP CONFIGURATION ====
CLEANUP_ENABLED=true
CLEANUP_INTERVAL_MINUTES=60
EXPIRED_SESSION_CLEANUP_HOURS=25