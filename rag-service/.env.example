# FastAPI RAG Service Environment Variables (rag-service)
# Copy to .env and fill in your values

# Master Encryption Key (Required) - Generate with: openssl rand -base64 32
RAG_MASTER_KEY=your-32-byte-base64-encoded-key-here

# Supabase Connection (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Embedding Provider Configuration (Required for production)
EMBEDDING_PROVIDER=nomic
EMBEDDING_MODEL=nomic-embed-text-v1.5
EMBEDDING_DIM=768
EMBEDDING_API_KEY=your-nomic-api-key-here

# Generation Provider Configuration (Required for production)
GENERATION_PROVIDER=groq
GENERATION_MODEL_FAST=llama-3.1-8b-instant
GENERATION_MODEL_QUALITY=llama-3.1-70b-versatile
GROQ_API_KEY=your-groq-api-key-here

# Service Configuration (Optional)
RAG_SERVICE_PORT=8001
DEBUG=false

# Document Processing (Optional)
CHUNK_SIZE=800
CHUNK_OVERLAP=150

# CORS Configuration (Optional - for development only)
ENABLE_CORS=false
NEXT_APP_URL=http://localhost:3000