# Raggy Client Configuration Template
# Copy this file to .env and configure for your deployment

# ==== CLIENT INFORMATION ====
CLIENT_NAME="Votre Entreprise"
CLIENT_SLUG="votre-entreprise"
DEPLOYMENT_TYPE="docker"
DEPLOYMENT_DATE="2025-01-XX"

# ==== API CONFIGURATION ====
API_TITLE="Assistant IA - ${CLIENT_NAME}"
API_DESCRIPTION="Solution RAG priv√©e pour ${CLIENT_NAME}"
API_VERSION="1.0.0"
ENVIRONMENT="production"
DEBUG=false

# ==== LLM CONFIGURATION ====
# Get your API key from https://console.groq.com/
GROQ_API_KEY="gsk_your_groq_api_key_here"
GROQ_MODEL="deepseek-r1-distill-llama-70b"
GROQ_TEMPERATURE=0.3
GROQ_MAX_TOKENS=2000

# Fallback LLM (optional)
# OPENAI_API_KEY="sk-your_openai_key_here"
# ANTHROPIC_API_KEY="sk-ant-your_anthropic_key_here"

# ==== DATABASE CONFIGURATION ====
# PostgreSQL with pgvector
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# Direct PostgreSQL connection (optional)
DATABASE_URL="postgresql://postgres:password@postgres:5432/raggy_db"

# ==== EMBEDDING CONFIGURATION ====
EMBEDDING_MODEL="dangvantuan/sentence-camembert-base"
EMBEDDING_DIMENSION=384
USE_HYBRID_SEARCH=true
USE_RERANKING=true
USE_QUERY_ENHANCEMENT=true

# ==== REDIS CONFIGURATION ====
REDIS_URL="redis://redis:6379"
REDIS_TTL=3600
REDIS_MAX_MEMORY="512mb"

# ==== SECURITY ====
# Generate with: openssl rand -hex 32
JWT_SECRET="your_jwt_secret_32_characters_long"
CORS_ORIGINS=["http://localhost:3000","https://your-domain.com"]

# ==== FEATURES & LIMITS ====
MAX_DOCUMENTS=1000
MAX_UPLOAD_SIZE_MB=50
MAX_QUERIES_PER_DAY=10000
RATE_LIMIT_PER_MINUTE=60

# Enable/disable features
ENABLE_UPLOAD=true
ENABLE_EXPORT=true
ENABLE_ANALYTICS=true
ENABLE_DEMO_MODE=false

# ==== BRANDING ====
PRIMARY_COLOR="#1e40af"
SECONDARY_COLOR="#3b82f6"
LOGO_URL="/logo-${CLIENT_SLUG}.png"
COMPANY_NAME="${CLIENT_NAME}"

# ==== FRONTEND CONFIGURATION ====
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_SUPABASE_URL="${SUPABASE_URL}"
NEXT_PUBLIC_SUPABASE_ANON_KEY="${SUPABASE_ANON_KEY}"
NEXT_PUBLIC_APP_NAME="Assistant IA - ${CLIENT_NAME}"
NEXT_PUBLIC_CLIENT_NAME="${CLIENT_NAME}"

# ==== MONITORING (Optional) ====
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project"
# GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# ==== EMAIL CONFIGURATION (Optional) ====
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="noreply@your-domain.com"
# SMTP_PASSWORD="your_app_password"
# FROM_EMAIL="Assistant IA <noreply@your-domain.com>"

# ==== BACKUP CONFIGURATION ====
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

